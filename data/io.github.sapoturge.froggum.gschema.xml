<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/io/github/sapoturge/froggum/" id="io.github.sapoturge.froggum">
   <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Maximized</summary>
      <description>Whether the window is maximized</description>
    </key>
    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="window-size" type="(ii)">
      <default>(800, 600)</default>
      <summary>Window size</summary>
      <description>Most recent window size (width, height)</description>
    </key>
    <key name="open-files" type="as">
      <default>[]</default>
      <summary>Open files</summary>
      <description>The files that were last open</description>
    </key>
    <key name="focused-file" type="s">
      <default>''</default>
      <summary>Focused file</summary>
      <description>The file last open in front</description>
    </key>
    <key name="show-tutorial" type="b">
      <default>true</default>
      <summary>Should the tutorial be shown?</summary>
      <description>Whether or not to show the tutorial</description>
    </key>
  </schema>
</schemalist>
